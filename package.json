{
  "name": "stock-tag-explorer",
  "version": "1.0.1",
  "description": "智能标签浏览器 - StockLink平台的核心数据发现引擎",
  "main": "api/tags.js",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'Building static assets...' && echo 'Build completed successfully'",
    "start": "vercel dev --listen 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "node scripts/test-api.js",
    "check-env": "node scripts/check-env.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "init-db": "node scripts/init-db.js",
    "seed-data": "node scripts/seed-data.js",
    "update-data": "node scripts/update-data.js",
    "update-stocks": "node scripts/update-stocks.js",
    "verify-data": "node scripts/verify-data.js",
    "optimize": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o public/styles/main.min.css public/styles/main.css",
    "minify-js": "terser public/js/app.js -o public/js/app.min.js --compress --mangle",
    "deploy": "vercel --prod",
    "logs": "vercel logs",
    "env:pull": "vercel env pull .env.local"
  },
  "keywords": [
    "stock",
    "tags",
    "explorer",
    "finance",
    "investment",
    "chinese",
    "stocklink"
  ],
  "author": {
    "name": "Simon Pan",
    "email": "contact@stocklink.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/Stock-Tag-Explorer.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/Stock-Tag-Explorer/issues"
  },
  "homepage": "https://tag-explorer.vercel.app",
  "dependencies": {
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.12",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.24.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "vercel": {
    "functions": {
      "api/**/*.js": {
        "runtime": "nodejs18.x"
      }
    },
    "env": {
      "DATABASE_URL": "@database-url",
      "POLYGON_API_KEY": "@polygon-api-key",
      "FINNHUB_API_KEY": "@finnhub-api-key",
      "CRON_SECRET": "@cron-secret"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "lib/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-unused-vars": "error"
    }
  }
}